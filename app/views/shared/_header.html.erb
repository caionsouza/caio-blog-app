<nav class="flex justify-between p-3 bg-blue-800">
  <ul class="flex gap-2 items-center">
    <li class="font-bold text-1g text-white"> <%= link_to 'Rails app', root_path %></li>
    <% if current_user &&  current_user.profile.present? %>
      <li> <%= link_to 'Articles', articles_path, class: "btn-primary" %></li>
      <li> <%= link_to 'Categories', categories_path, class: "btn-primary" %>
      <% unless current_user.profile.member? %>
        <li> <%= link_to 'New article', new_article_path, class: "btn-primary" %></li>
        <li> <%= link_to "New category", new_category_path, class: "btn-primary" %> </li>
      <% end %>
      <li> <%= link_to 'Users', users_path, class: "btn-primary" %></li>
      <li class="font-bold text-white"> <%= current_user.profile.role %></li>
    <% end %>
  </ul>
  <ul class="flex gap-2 items-center">
    <% if current_user %>
      <li class="text-white text-sm font-semibold"> <%= current_user.email%> </li>
      <li> <%= button_to 'Log out', logout_path, method: :delete, class: "btn-primary bg-red-700" %> </li>
    <% else %>
      <li> <%= link_to 'Login', login_path, class: "btn-primary bg-green-700" %> </li>
      <li> <%= link_to 'Sign up', signup_path, class: "btn-primary bg-blue-700" %> </li>
    <% end %>
  </ul>
</nav>